%% -*- erlang -*-
{erl_first_files,
 [
  "src/exometer_igor.erl",
  "src/exometer_util.erl",
  "src/exometer_entry.erl",
  "src/exometer_probe.erl",
  "EXOMETER-MIB.mib"
 ]}.

{mandatory_deps, [lager , parse_trans, setup]}.
{configurations, [{minimal, []},
		  {basic, [folsom]},
		  {amqp , [amqp_client, jiffy]},
		  {full , [{basic}, afunix, netlink, {amqp}]}]}.
{deps,
 [
  {lager, ".*", {git, "git://github.com/basho/lager.git", {tag,"master"}}},
  {parse_trans, ".*", {git, "git://github.com/uwiger/parse_trans.git", {branch,master}}},
  {afunix, ".*", {git, "https://github.com/tonyrog/afunix.git", "HEAD"}},
  {netlink, ".*", {git, "git://github.com/Feuerlabs/netlink.git", "HEAD"}},
  {folsom, ".*", {git, "git://github.com/boundary/folsom", {tag, "master"}}},
  {amqp_client, ".*", {git, "git://github.com/jbrisbin/amqp_client.git", {tag, "rabbitmq-3.3.5"}}},
  {jiffy, ".*", {git, "git://github.com/davisp/jiffy.git", "master"}},
  {setup, ".*", {git, "git://github.com/uwiger/setup.git", {branch,master}}}
 ]}.

{erl_opts,
 [
  debug_info,
  fail_on_warning,
  {parse_transform, lager_transform},
  {verbosity, trace}
 ]}.

{sub_dirs, ["src"]}.

{edoc_opts,
 [
  {doclet, edown_doclet},
  {app_default, "http://www.erlang.org/doc/man"},
  {doc_path, []},
  {top_level_readme,
   {"./README.md",
    "https://github.com/Feuerlabs/exometer", "master"}}
 ]}.

{xref_checks,
 [
  undefined_function_calls,
  undefined_functions,
  locals_not_used,
  deprecated_functions_calls,
  deprecated_functions
 ]}.

{cover_enabled, true}.
{cover_print_enabled, true}.

{clean_files, ["test/app1/ebin/*.beam"]}.
