%% -*- erlang -*-
{erl_first_files,
 [
  "EXOMETER-MIB.mib"
 ]}.

{deps,
 [
  {exometer_core, "1.5.6"}
 ]}.

{profiles,
 [
  {test, [{deps, [{meck, "0.8.12"}]}]},
  {docs, [{deps, [{edown, "0.8.1"}]}]},
  {amqp, [{deps, [{amqp_client, "3.7.9-rc.2"}, {jiffy, "0.15.2"}]}]},
  {collectd, [{deps, [{exometer_collectd, {git, "git://github.com/Feuerlabs/exometer_collectd.git", {branch, "master"}}}]}]},
  {netlink, [{deps, [{netlink, "1.1.0"}]}]},
  {full, [{deps, [
		  {amqp_client, "3.7.9-rc.2"},
		  {jiffy, "0.15.2"},
  {exometer_collectd, {git, "git://github.com/Feuerlabs/exometer_collectd.git",
		       {branch, "master"}}},
		  {netlink, "1.1.0"}
		 ]}]}
 ]}.

{erl_opts,
 [
  debug_info,
  fail_on_warning,
  {verbosity, trace}
 ]}.

{edoc_opts,
 [
  {doclet, edown_doclet},
  {app_default, "http://www.erlang.org/doc/man"},
  {doc_path, ["http://raw.github.com/Feuerlabs/exometer_core/master/doc"]},
  {top_level_readme,
   {"./README.md",
    "https://github.com/Feuerlabs/exometer", "master"}}
 ]}.

{xref_checks,
 [
  undefined_function_calls,
  undefined_functions,
  locals_not_used,
  deprecated_functions_calls,
  deprecated_functions
 ]}.

{cover_enabled, true}.
{cover_print_enabled, true}.

{clean_files, ["test/app1/ebin/*.beam"]}.

{ct_use_short_names, true}.
